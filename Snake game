<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Simple Snake Game</title>
  <style>
    body {
      background: #111;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
    canvas {
      background: #222;
      border: 2px solid #00ff00;
    }
  </style>
</head>
<body>

<canvas id="gameCanvas" width="400" height="400"></canvas>

<script>
  const canvas = document.getElementById("gameCanvas");
  const ctx = canvas.getContext("2d");

  const tileSize = 20;
  const tileCount = canvas.width / tileSize;

  let snake = [{ x: 10, y: 10 }];
  let direction = { x: 0, y: 0 };
  let food = spawnFood();
  let isGameOver = false;

  document.addEventListener("keydown", e => {
    const key = e.key;
    if (key === "ArrowUp" && direction.y === 0) direction = { x: 0, y: -1 };
    if (key === "ArrowDown" && direction.y === 0) direction = { x: 0, y: 1 };
    if (key === "ArrowLeft" && direction.x === 0) direction = { x: -1, y: 0 };
    if (key === "ArrowRight" && direction.x === 0) direction = { x: 1, y: 0 };
  });

  function spawnFood() {
    return {
      x: Math.floor(Math.random() * tileCount),
      y: Math.floor(Math.random() * tileCount)
    };
  }

  function gameLoop() {
    if (isGameOver) {
      drawGameOver();
      return;
    }

    moveSnake();
    checkCollision();
    drawGame();

    setTimeout(gameLoop, 100);
  }

  function moveSnake() {
    const head = {
      x: snake[0].x + direction.x,
      y: snake[0].y + direction.y
    };

    snake.unshift(head);

    if (head.x === food.x && head.y === food.y) {
      food = spawnFood(); // grow snake
    } else {
      snake.pop(); // maintain length
    }
  }

  function checkCollision() {
    const [head, ...body] = snake;

    const hitWall =
      head.x < 0 || head.y < 0 ||
      head.x >= tileCount || head.y >= tileCount;

    const hitSelf = body.some(seg => seg.x === head.x && seg.y === head.y);

    if (hitWall || hitSelf) isGameOver = true;
  }

  function drawGame() {
    // Clear screen
    ctx.fillStyle = "#222";
    ctx.fillRect(0, 0, canvas.width, canvas.height);

    // Draw food
    ctx.fillStyle = "#f00";
    ctx.fillRect(food.x * tileSize, food.y * tileSize, tileSize - 2, tileSize - 2);

    // Draw snake
    ctx.fillStyle = "#0f0";
    snake.forEach(seg => {
      ctx.fillRect(seg.x * tileSize, seg.y * tileSize, tileSize - 2, tileSize - 2);
    });
  }

  function drawGameOver() {
    ctx.fillStyle = "#fff";
    ctx.font = "30px Arial";
    ctx.textAlign = "center";
    ctx.fillText("Game Over", canvas.width / 2, canvas.height / 2);
  }

  // Start the game
  gameLoop();
</script>

</body>
</html>
